    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "formConsumer:affordable-sqs",
            "invokeTarget": {
                "target": "code",
                "projectRoot": "${workspaceFolder}/consumer/app",
                "lambdaHandler": "app.handler"
            },
            "lambda": {
                "runtime": "nodejs12.x",
                "payload": {"path": "${workspaceFolder}/consumer/events/s3Payload.sqs.json"},
                "environmentVariables": {}
            }
        },
        {
            "name": "NodeJS: Remote Attach",
            "type": "node",
            "request": "attach",
            "port": 5678,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/",
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "stopOnEntry": false
        }
    ]
}
